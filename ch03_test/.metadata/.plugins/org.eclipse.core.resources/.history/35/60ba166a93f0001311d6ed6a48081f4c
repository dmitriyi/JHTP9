package ch3_Grade;

import java.util.Scanner;

public class GradeBookTest { //Is our Driver Class
	
	public static void main (String [] args){
		
		GradeBook myGradeBook = new GradeBook();	// Created GradeBook Object and assigned it to MyGradeBook Variable
		Scanner in = new Scanner(System.in);
	
		// Display the initial value of the courseName
		System.out.printf("Initial course name is: %s\n\n", myGradeBook.getCourseName());
		
		System.out.println("Plese enter the name of the course: ");
		String theName =in.nextLine();
		myGradeBook.setCourseName( theName );
		System.out.println();
		
		
		myGradeBook.displayMessage();		
	}
}
 